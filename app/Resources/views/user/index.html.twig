{% extends 'index.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block titleList %}Liste des utilisateurs{% endblock %}

{% block headTable %}
    <th>Id</th>
    <th>Actions</th>
{% endblock %}

{% block bodyTable %}
    {% for user in users %}
        <tr>
            <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
            <td>
                <div class="btn-group btn-group-toggle">
                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-light">Voir</a>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-light">Modifier</a>
                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

