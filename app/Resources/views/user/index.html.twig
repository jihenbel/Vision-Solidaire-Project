{% extends 'index.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}


    {% if users|length >0 %}

        {% block titleList %}Liste des utilisateurs{% endblock %}

        {% block headTable %}
            <th>Id</th>
            <th>Username</th>
            <th>Actions</th>
        {% endblock %}

        {% block bodyTable %}
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                    <td>
                        <div class="btn-group btn-group-toggle">
                            <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-light">Voir</a>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-light">Modifier</a>
                            <a href="{{ path('user_delete', { 'id': user.id }) }}" class="btn btn-light">Supprimer</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}

    {% else %}
        {% block vide %}<h3 class="card-title">Y'a pas des utilisateurs</h3>{% endblock %}
    {% endif %}


{% block add %}<a href="{{ path('user_new') }}" class="btn btn-dark">Cr√©er un nouveau utilisateur</a>{% endblock %}
