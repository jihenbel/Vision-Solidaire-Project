{% extends 'index.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block titleList%} Liste des modules {% endblock %}

{% block headTable %}
    <th>Id</th>
    <th>Libelle</th>
    <th>Description</th>
    <th>Actions</th>
{% endblock %}

{% block bodyTable %}
    {% for module in modules %}
        <tr>
            <td><a href="{{ path('module_show', { 'id': module.id }) }}">{{ module.id }}</a></td>
            <td>{{ module.libelle }}</td>
            <td>{{ module.description }}</td>
            <td>
                <div class="btn-group btn-group-toggle">
                        <a href="{{ path('module_show', { 'id': module.id }) }}" class="btn btn-light">Voir</a>
                        <a href="{{ path('module_edit', { 'id': module.id }) }}" class="btn btn-light">Modifier</a>
                        <a href="{{ path('module_delete', { 'id': module.id }) }}" class="btn btn-light">Supprimer</a>

                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block add %} <a href="{{ path('module_new') }}" class="btn btn-dark">Cr√©er un nouveau module</a>{% endblock %}

