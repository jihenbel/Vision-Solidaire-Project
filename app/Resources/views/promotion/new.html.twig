{% extends 'base.html.twig' %}

{% block title %}Créer une promotion{% endblock %}

{% block body %}
    <h1>Créer une promotion</h1>

    {% for message in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Créer" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('promotion_index') }}">Retour à la liste</a>
        </li>
    </ul>
{% endblock %}
